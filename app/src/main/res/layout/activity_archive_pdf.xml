<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_archive_pdf_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.PdfArchiveActivity"
        tools:listitem="@layout/list_item_archive_pdf" />

    <TextView
        android:id="@+id/activity_archive_pdf_empty"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/activity_archive_pdf_empty"
        android:gravity="center"
        android:visibility="gone" />
</LinearLayout>