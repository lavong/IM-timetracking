<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardViewStyle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/list_item_tracking_btn_resume_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:src="@drawable/btn_play" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/list_item_tracking_btn_resume_pause"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/list_item_tracking_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_item_tracking_initial_time"
                android:textColor="@color/im_green"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/list_item_tracking_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_item_tracking_unnamed_title"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
